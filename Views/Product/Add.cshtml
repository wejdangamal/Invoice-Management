@model ProductVM
@{
    ViewData["Title"] = "Add Product";
}
<title>@ViewData["Title"]</title>
<h1 class="text text-center">@ViewData["Title"]</h1>
<div class="container">
    <form asp-action="Add" asp-controller="Product" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group p-3">
            <label asp-for="productName">Product Name</label>
            <input asp-for="productName" type="text" class="form-control" id="productName" placeholder="Enter Product Name">
            <span asp-validation-for="productName" class="text text-danger"></span>
        </div>
        <div class="form-group p-3">
            <label asp-for="price">Price</label>
            <input asp-for="price" type="text" class="form-control" id="price" placeholder="Enter Product Price">
            <span asp-validation-for="price" class="text text-danger"></span>
        </div>
        <div class="form-group p-3">
            <label asp-for="Quantity">Quantity</label>
            <input asp-for="Quantity" type="number" class="form-control" id="Quantity" placeholder="Enter Product Quantity">
            <span asp-validation-for="Quantity" class="text text-danger"></span>
        </div>
        <div class="form-group p-3">
            <label asp-for="categoryId">Category Name</label>
            <select asp-for="categoryId" asp-items="ViewBag.Options"></select>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
